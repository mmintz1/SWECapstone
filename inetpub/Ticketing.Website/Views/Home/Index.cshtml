@model List<Ticketing.Framework.Models.Ticket.PerformanceVM>
@{
    ViewBag.Title = "Index";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>ABMZ Ticketing System</h1>
            </hgroup>
        </div>
    </section>
}

<section class="content-wrapper main-content clear-fix">
    <article>
        <p>
            Welcome to our site. This is filler content until we add actual content.
            We should have a few sentences here as this is the landing page.
        </p>
    </article>
