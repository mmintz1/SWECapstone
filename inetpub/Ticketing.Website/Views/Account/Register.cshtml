@model Ticketing.Framework.Models.Account.RegisterVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h1>Register</h1>
    <h2>Create a new account</h2>
</hgroup>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <fieldset>
        <legend>Account Information</legend>
        @Html.ValidationMessage("ErrorMessage")
        <div class="editor-label">
            @Html.LabelFor(l => l.FirstName, "First Name")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(l => l.FirstName, new { required = "" })
        </div>
        @Html.ValidationMessageFor(l => l.FirstName)
        <div class="editor-label">
            @Html.LabelFor(l => l.LastName, "Last Name")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(l => l.LastName, new { required = "" })
        </div>
        @Html.ValidationMessageFor(l => l.LastName)
        <div class="editor-label">
            @Html.LabelFor(l => l.Email, "Email")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(l => l.Email, new { required = "", type = "email" })
        </div>
        @Html.ValidationMessageFor(l => l.Email)
        <div class="editor-label">
            @Html.LabelFor(l => l.Password, "Password")
        </div>
        <div class="editor-field">
            @Html.PasswordFor(l => l.Password, new { required = "" })
        </div>
        @Html.ValidationMessageFor(l => l.Password)
        <div class="editor-label">
            @Html.LabelFor(l => l.VerifyPassword, "Confirm Password")
        </div>
        <div class="editor-field">
            @Html.PasswordFor(l => l.VerifyPassword, new { required = "", equalTo = "Password" })
        </div>
        @Html.ValidationMessageFor(l => l.VerifyPassword)

        <p>
            <input type="submit" value="submit" />
            @Html.ActionLink("Cancel", "Login", new { controller = "Account" })
        </p>

    </fieldset>
}

<script type="text/javascript">
    $('.management-form').validate();
</script>