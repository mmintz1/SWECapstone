@model Ticketing.Framework.Models.Account.RegisterVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div>
        <fieldset>
            <legend>Account Information</legend>
            @Html.ValidationMessage("ErrorMessage")
            <div class="editor-label">
                @Html.LabelFor(l => l.FirstName, "First Name")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.FirstName, new { required = "" })
            </div>
            <div class="editor-label">
                @Html.LabelFor(l => l.LastName, "Last Name")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.LastName, new { required = "" })
            </div>            
            <div class="editor-label">
                @Html.LabelFor(l => l.Email, "Email")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.Email, new { required = "" })
            </div>
            <div class="editor-label">
                @Html.LabelFor(l => l.Password, "Password")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(l => l.Password, new { required = "" })
            </div>
            <div class="editor-label">
                @Html.LabelFor(l => l.VerifyPassword, "Confirm Password")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(l => l.VerifyPassword, new { required = "" })
            </div>

            <p>
                <input type="submit" value="submit" />
                @Html.ActionLink("Cancel", "Index", new { controller = "Account" })
            </p>

        </fieldset>
    </div>
}

<script type="text/javascript">
    $('.management-form').validate();
</script>